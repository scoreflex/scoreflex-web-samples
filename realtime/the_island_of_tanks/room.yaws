<erl>
out(Arg) ->
    try
        application:start(inets),
        {ok, URL} = yaws_api:queryvar(Arg, "url"),
        {ok, Id}  = yaws_api:queryvar(Arg, "room"),
        {Status, Response} = get_room_info(URL, Id),
        [{status, Status}, {content, "application/json", Response}]
    catch
        _:_ ->
            [{status, 400}]
    end.

get_room_info(URL, Id) ->
    case httpc:request(get, {URL ++ "/rooms/" ++ Id, []}, [],
                       [{full_result, false}]) of
        {ok,  {200, Body}} ->
            {200, Body};
        {ok, {Status, _}} ->
            {Status, "{}"};
        {error, Reason} ->
            {500, "{}"}
    end.
</erl>
